<div class="page-header">
    <h1 class="text-center text-primary">Usuarios de préstamos registrados</h1>
</div>
<%= tabbable "Alumnos", "Profesores", "Personal", fade: true do |usuarios_prestamos| %>

  <% usuarios_prestamos.tab_pane do %>
    <table class="table table-striped table-hover">
        <tr>
            <th>Número de control</th>
            <th>Primer nombre</th>
            <th>Segundo nombre</th>
            <th>Apellido paterno</th>
            <th>Apellido materno</th>
            <th>Carrera</th>
            <th></th>					
        </tr>

        <% @alumnos.each do |alumno| %>
          <tr>
              <td><%= alumno.numero_de_control %></td>
              <td><%= alumno.primer_nombre%></td>
              <td><%= alumno.segundo_nombre %></td>
              <td><%= alumno.apellido_paterno %></td>
              <td><%= alumno.apellido_materno %></td>
              <td><%= alumno.carrera.nombre %></td>
              <td class="text-center"><%= link_to "Ver usuario prestamista", alumno, class: "btn btn-primary link-white"%></td>
            </tr>
          <% end %>
      </table>
      <%= button_to 'Agregar nuevo alumno', agregar_usuario_prestamo_path(:alumno), class: "center-block btn-primary btn" %>
    <% end %>
    <% usuarios_prestamos.tab_pane do %>
      <table class="table table-striped table-hover">
          <tr>
              <th>Primer nombre</th>
              <th>Segundo nombre</th>
              <th>Apellido paterno</th>
              <th>Apellido materno</th>
              <th>Departamento</th>
              <th></th>					
          </tr>

          <% @profesores.each do |profesor| %>
            <tr>
                <td><%= profesor.rfc %> </td>
                <td><%= profesor.primer_nombre%></td>
                <td><%= profesor.segundo_nombre %></td>
                <td><%= profesor.apellido_paterno %></td>
                <td><%= profesor.apellido_materno %></td>
                <td></td>
                <td class="text-center"><%= link_to "Ver usuario prestamista", profesor, class: "btn btn-primary link-white"%></td>
              </tr>
            <% end %>
        </table>
        <%= button_to 'Agregar usuario profesor', agregar_usuario_prestamo_path(:profesor), class: "center-block btn-primary btn" %>

      <% end %>
      <% usuarios_prestamos.tab_pane do %>
        <table class="table table-striped table-hover">
            <tr>
                <th>RFC</th>
                <th>Primer nombre</th>
                <th>Segundo nombre</th>
                <th>Apellido paterno</th>
                <th>Apellido materno</th>
                <th>Departamento</th>
                <th></th>					
            </tr>

            <% @personal.each do |personal| %>
              <tr>
                  <td><%= personal.rfc %></td>
                  <td><%= personal.primer_nombre%></td>
                  <td><%= personal.segundo_nombre %></td>
                  <td><%= personal.apellido_paterno %></td>
                  <td><%= personal.apellido_materno %></td>
                  <td></td>
                  <td class="text-center"><%= link_to "Ver usuario prestamista", personal, class: "btn btn-primary link-white"%></td>
                </tr>
            <% end %>
          </table>
          <%= button_to 'Agregar usuario personal', agregar_usuario_prestamo_path(:personal), class: "center-block btn-primary btn" %>
        <% end %>
      <% end %>