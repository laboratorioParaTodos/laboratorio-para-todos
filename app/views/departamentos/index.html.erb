<% content_for :titulo do %>
	Departamentos registrados
<% end %>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.nombre %></td>
        <td><%= departamento.descripcion %></td>
        <td><%= link_to 'Editar', edit_departamento_path(departamento), class: 'btn btn-warning link-white' %></td>
        <td><%= link_to 'Eliminar', departamento, method: :delete, data: { confirm: '¿Está seguro que quiere eliminar este departamento?' },class: 'btn btn-danger link-white' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="text-center">
	
	<%= link_to 'Agregar nuevo departamento', new_departamento_path, class: 'btn btn-primary link-white' %>
</div>
