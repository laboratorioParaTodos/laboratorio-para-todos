<%= bootstrap_form_for(@laboratorio) do |f| %>

  <%= f.alert_message "Por favor corrija los siguientes errores: "%>

  <%= f.text_field :nombre %>
  <%= f.text_area :descripcion %>
  <%= f.select :departamento_id, options_for_select(Departamento.all.map {|d| [d.nombre, d.id]}, @laboratorio.departamento) %>
  <%= f.submit "Guardar", :class => 'btn btn-primary center-block' %>
<% end %>
