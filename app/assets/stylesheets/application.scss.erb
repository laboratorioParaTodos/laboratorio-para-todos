body {
  background-color: whitesmoke;
}

.container {
  background-color: white;
}

.text-white {
  color: white;
}

#barra_superior {
  background-color: darken($brand-primary, 20%);
}

.logo-superior {
  margin: 10px;
  height: 150px;
}

a.link-white:visited {
  color: white;
}

.img-slide {
  width: 100%;
}


#carousel-imagenes {
}

#carousel_container {
  margin-bottom: 10px;
  width: 70%;
}

.carousel-inner > .item > img, .carousel-inner > .item > a > img {
  height: 350px;
}

.row-imagen img {
  height: 200px;
}

.row-imagen-modal img {
	height: 100px;
}

.imagen-articulo img{
  max-width: 70%;
}

#menu {
  margin: 5px auto;
}

.row {
  margin-bottom: 10px;
}


.imagen-usuario {
  width: 20%;
}

.control-label {
  margin-right: 5px;
  margin-left: 5px;
}

.margin-5 {
	margin-top: 5px;
	margin-bottom: 5px;
}

table.barby-barcode { border-spacing: 0; }
